<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sbl_dynamic_portal_form_view" model="ir.ui.view">
        <field name="name">sbl.dynamic.portal.form</field>
        <field name="model">sbl.dynamic.portal</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                    <field
                        name="image_1920"
                        widget="image"
                        class="oe_avatar"
                        options="{'convert_to_webp': True, 'preview_image': 'image_128'}"
                    />
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Title"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="sbl_model_id"/>
                            <field name="sbl_model_name" invisible="1"/>
                            <field name="sbl_domain" widget="domain"
                                options="{'foldable': True, 'model': 'sbl_model_name', 'in_dialog': True}"/>
                        </group>
                        <group>
                            <field name="active" widget="boolean_toggle"/>
                            <field name="sbl_report_id" domain="[('model', '=', sbl_model_name)]"/>
                            <field name="sbl_sortby_ids" widget="many2many_tags"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="fields" string="Fields">
                            <field name="sbl_field_line" context="{'default_sbl_model_id': sbl_model_id}">
                                <list editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="sbl_model_id" column_invisible="1"/>
                                    <field name="sbl_field_id" required="1"
                                        domain="[('model_id', '=', sbl_model_id), ('ttype', 'not in', ['one2many', 'binary'])]"/>
                                    <field name="sbl_ttype"/>
                                    <field name="sbl_display_currency" widget="boolean_toggle" invisible="sbl_ttype != 'float'"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="sbl_dynamic_portal_list_view" model="ir.ui.view">
        <field name="name">sbl.dynamic.portal.list</field>
        <field name="model">sbl.dynamic.portal</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="sbl_model_id"/>
            </list>
        </field>
    </record>

    <record id="sbl_dynamic_portal_search_view" model="ir.ui.view">
        <field name="name">sbl.dynamic.portal.search</field>
        <field name="model">sbl.dynamic.portal</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="sbl_model_id"/>
                <separator/>
                <filter string="Archived" name="archived" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>

    <record id="sbl_dynamic_portal_action" model="ir.actions.act_window">
        <field name="name">Dynamic Portal</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sbl.dynamic.portal</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>