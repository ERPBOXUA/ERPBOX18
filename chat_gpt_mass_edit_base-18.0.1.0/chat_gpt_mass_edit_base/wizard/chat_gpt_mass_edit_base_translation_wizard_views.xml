<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="chat_gpt_mass_edit_base_wizard_translation_form" model="ir.ui.view">
        <field name="name">chat_gpt_mass_edit_base.gpt_wizard.form</field>
        <field name="model">gpt_wizard_translate</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="gpt_question_template" />
                    <field name="gpt_question" />
                    <field name="lang" />
                    <field name="current_lang" />

                    <style>
    .chat_gpt_warning {
    color: red;
}
                    </style>
                    <field
                        name="error_message"
                        invisible="['|', ('error_message', '=', ''), ('error_message', '=', False)]"
                        class="chat_gpt_warning"
                    />
                </group>
                <group string="Additional Features">
                    <field name="res_model_id" />
                    <field name="gpt_field_to_map_answer" />
                    <field name="records_effected" />
                </group>
                <footer>
                    <button
                        string="Translate"
                        name="get_results_from_gpt_wizard_translate"
                        type="object"
                        class="oe_highlight"
                        data-hotkey="q"
                    />
                    <button
                        string="Cancel"
                        class="btn btn-secondary"
                        special="cancel"
                        data-hotkey="x"
                    />
                </footer>
            </form>
        </field>
    </record>

    <record id="gpt_translation_wizard_action" model="ir.actions.act_window">
        <field name="name">GPT Wizard</field>
        <field name="res_model">gpt_wizard_translate</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
