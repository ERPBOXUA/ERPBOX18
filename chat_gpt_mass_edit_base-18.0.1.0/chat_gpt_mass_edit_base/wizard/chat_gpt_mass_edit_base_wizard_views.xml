<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="chat_gpt_mass_edit_base_wizard_form" model="ir.ui.view">
        <field name="name">chat_gpt_mass_edit_base.gpt_wizard.form</field>
        <field name="model">gpt_wizard</field>
        <field name="arch" type="xml">
            <form>
                <field name="old_type_of_prompt" invisible="1" />
                <field name="sample_product_template_id" invisible="1" />

                <group name="settings" string="Settings">
                    <field name="type_of_prompt" />
                    <field name="advanced_settings" />
                </group>
                <group name='promt' string="Promt">
                    <field name="gpt_question_template" />
                    <field
                        name="gpt_extra_template"
                        invisible="not advanced_settings"
                    />
                    <field name="json_extra_info" invisible="not advanced_settings" />

                    <field name="gpt_question" />
                    <field
                        name="gpt_field_to_map_answer"
                        invisible="type_of_prompt == 'create_image'"
                    />



                    <field
                        name="error_message"
                        class="chat_gpt_warning"
                        invisible="not error_message"
                    />
                </group>

                <group
                    string="Image Output"
                    invisible="type_of_prompt != 'create_image'"
                >
                    <group>
                        <field name="gpt_field_to_map_image" />
                        <field name="add_image_to_extra_images" />
                    </group>
                </group>

                <group string="Image Input" invisible="type_of_prompt != 'image'">
                    <group>
                        <field name="gpt_field_for_input_image" />
                    </group>
                </group>


                <group string="Additional Features" invisible="not advanced_settings">
                    <field name="system_message" />
                    <field name="res_model_id" />
                    <field name="gpt_field_to_map_answer" />
                    <field name="current_lang" />
                </group>

                <group string="Images" invisible="not advanced_settings ">
                    <field
                        name="image_size"
                        invisible="type_of_prompt != 'create_image'"
                    />
                    <field
                        name="image_quality"
                        invisible="type_of_prompt != 'create_image'"
                    />
                    <field
                        name="image_model"
                        invisible="type_of_prompt != 'create_image'"
                    />
                    <field
                        name="current_lang"
                        invisible="type_of_prompt != 'create_image'"
                    />
                </group>


                <group string="Sample for testing" invisible="not advanced_settings">
                    <group>
                        <field name="records_effected" />
                    </group>
                </group>




                <footer>
                    <button
                        string="Get Result from GPT"
                        name="get_results_from_gpt_wizard"
                        type="object"
                        class="oe_highlight"
                        data-hotkey="q"
                    />
                    <button
                        string="Cancel"
                        class="btn btn-secondary"
                        special="cancel"
                        data-hotkey="x"
                    />
                </footer>
            </form>
        </field>
    </record>

    <record id="gpt_wizard_action" model="ir.actions.act_window">
        <field name="name">GPT Wizard</field>
        <field name="res_model">gpt_wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
